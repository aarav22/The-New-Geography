<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".OtherTutorialActivity"
    tools:showIn="@layout/activity_other_tutorial">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/antarctica_blurred"
            android:layout_width="334dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/antarctica_blurred" />

        <TextView
            android:id="@+id/writeAntarctica"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:fontFamily="@font/arlrdbd"
            android:text="Blurred area in Antarctica"
            android:textAllCaps="false"
            android:textColor="#34385D"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/private_estate_lowres"
            android:layout_width="334dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/private_estate_lowres" />

        <TextView
            android:id="@+id/writeChile"
            android:layout_width="328dp"
            android:layout_height="89dp"
            android:fontFamily="@font/arlrdbd"
            android:text="Low resolution area in Tantauco National Park, Chile"
            android:textAllCaps="false"
            android:textColor="#34385D"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/tibet_china"
            android:layout_width="334dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/tibet_china" />

        <TextView
            android:id="@+id/writeTibet"
            android:layout_width="334dp"
            android:layout_height="89dp"
            android:fontFamily="@font/arlrdbd"
            android:text="Large obscuring pixelation in Tibet, China"
            android:textAllCaps="false"
            android:textColor="#34385D"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/seymour_avenue"
            android:layout_width="334dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/seymour_avenue" />

        <TextView
            android:id="@+id/writeSeymour"
            android:layout_width="331dp"
            android:layout_height="89dp"
            android:fontFamily="@font/arlrdbd"
            android:text="Blurring of 2207 Seymour Avenue on Google Street View"
            android:textAllCaps="false"
            android:textColor="#34385D"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/military_base"
            android:layout_width="334dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/military_base" />

        <TextView
            android:id="@+id/writeMilitary"
            android:layout_width="346dp"
            android:layout_height="115dp"
            android:fontFamily="@font/arlrdbd"
            android:text="The Ayioi Anargyroi Military Base, Athens appears pixelated on Google Maps."
            android:textAllCaps="false"
            android:textColor="#34385D"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/writeSources"
            android:layout_width="328dp"
            android:layout_height="36dp"
            android:fontFamily="@font/arlrdbd"
            android:text="Source: Google Maps"
            android:textAllCaps="false"
            android:textColor="#34385D"
            android:textSize="22sp" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>